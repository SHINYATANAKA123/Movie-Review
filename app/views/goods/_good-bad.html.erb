<p>このレビューに対する評価</p>
 <% if review.good_by?(current_user) %>
  <%= link_to review_good_path(review), class:"btn btn-light ", method: :delete, remote: true do %>
    <i class="fas fa-thumbs-up"></i>
    <%= review.goods.count %>
  <% end %>
 <% else %>
  <%= link_to review_good_path(review), class:"btn btn-light ", method: :post, remote: true do %>
    <i class="far fa-thumbs-up"></i>
    <%= review.goods.count %>
   <% end %>
  <% end %>

 <% if review.bad_by?(current_user) %>
  <%= link_to review_bad_path(review), class:"btn btn-light ", method: :delete, remote: true do %>
    <i class="fas fa-thumbs-down"></i>
    <%= review.bads.count %>
   <% end %>
 <% else %>
  <%= link_to review_bad_path(review), class:"btn btn-light ", method: :post, remote: true do %>
    <i class="far fa-thumbs-down"></i>
    <%= review.bads.count %>
   <% end %>
  <% end %>
