<div class="devise_container text-center">
  <h2 class="mt-4">登録情報編集 / 退会</h2>

 <%= form_with model: @user, local: true do |f| %>
    <div class="field.form-group">
      <%= f.label :name, "Name(半角英数字, 10文字まで)" %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field form-group">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email %>
    </div>

    <div class="field form-group">
      <%= f.label :birthday, "生まれ年(任意)" %><br />

      <%= f.date_select :birthday, {start_year: 1940, end_year: Time.now.year - 10, date_separator: '/ ', prompt:"--" } %>
    </div>

    <div class="field form-group">
      <%= f.label :intro, "自己紹介(任意)" %><br />
      <%= f.text_area :intro, style:"width: 40%; height: 100px;" %>
    </div>


    </div>


    <div class="actions mx-auto row mt-5">
      <div class="col-md"></div>
      <div class="col-md"><%= f.submit "更新する", class:"btn btn-success" %></div>
      <div class="col-md"><%= link_to '退会する', user_registration_path(@review), class:"btn btn-danger", method: :delete,
      data: {confirm: 'アカウントを削除してもよろしいですか？'} %></div>
      <div class="col-md"></div>
    </div>
  <% end %>
</div>