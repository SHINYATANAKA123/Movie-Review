<div class="main user-show">
  <div class="container">
    <div class="user-show-card">
      <div class="card-body">
        <p class="card-text">
          <div class="main user-show">
              <div class="user">
                <div><img src="<%= @user.image_id %>"></div>
                <div class="user-name"><%= @user.name %></div>
                 <% if @user.birthday.present? %>
                  <p class="user-old"><%= age(@user.birthday) %>歳</p>
                 <% end %>
                <p class="user-intro"><%= @user.intro%></p>
                <p><%= @user.email %></p>
                <% if @user.id == current_user.id %>
                  <%= link_to("編集", "/users/#{@user.id}/edit") %>
                <% end %>
              </div>
        </div>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </p>
    </div>
    <ul class="nav nav-tabs justify-content-center" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="item1-tab" data-toggle="tab" href="#item1" role="tab" aria-controls="item1" aria-selected="true">follower</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="item2-tab" data-toggle="tab" href="#item2" role="tab" aria-controls="item2" aria-selected="false">following</a>
