<%= render "devise/shared/error_messages", resource: resource %>
<div class="card col-sm-5 mx-auto mt-5" style="padding-bottom:20px;margin-bottom:50px">
  <div class="card-body">
    <h4 class="mt-1 mb-3 bg-gray text-center ">ログイン</h4>
    <h5 class="mt-1 mb-3 bg-gray text-center ">会員の方はこちらからログイン</h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス", :class => "form-label"  %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@examole.com", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", :class => "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

      <div class="actions" style="text-align:center">
        <%= f.submit "ログイン", class: "btn btn-success col-12" %>
      </div>
    <% end %>
  </div>

  <h4 class="mt-1 mb-3 bg-gray text-center ">会員登録がお済みでない方</h4>

  <div class="SNS-login">
    <div class="facebook SNS">
        <%= link_to user_facebook_omniauth_authorize_path, method: :post, class:"facebook_log_in" do %>
          <i class="fab fa-facebook "></i><b> Facebookで登録・ログイン</b>
        <% end %>
      </div>


      <div class="google SNS">
        <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class:"google_log_in" do %>
          <i class="fab fa-google "></i><b> Googleで登録・ログイン</b>
        <% end %>
      </div>

      <div class="twitter SNS">
        <%= link_to user_twitter_omniauth_authorize_path, method: :post, class:"twitter_log_in" do %>
          <i class="fab fa-twitter "></i><b> Twitterで登録・ログイン</b>
        <% end %>
      </div>
  </div>

</div>