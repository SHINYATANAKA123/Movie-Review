<% if params[:genre_id].present? %>
 <h2>人気の映画 - <%= @genre[:name] %></h2>
<% else %>
 <h2>検索ワード - <%= params[:word] %></h2>
<% end %>

<div class="genre_search mt-4 shadow-sm">
  <div class="search_heading">ジャンルで映画検索</div>
  <div class="search_items">
    <% @genres.each do |genre| %>
      <%= link_to search_path(genre_id: genre[:id]) do %>
        <div class="genre-button"><%= genre[:name] %></div>
        <% end %>
        <% end %>
  </div>
 </div>

<% @movies.results.each do |movie| %>
  <%= link_to movie_path(movie['id']) do %>
  　	<% if movie.poster_path %>
    <%= image_tag('https://image.tmdb.org/t/p/w300' + movie.poster_path, class: 'img-thumbnail') %>
		<% else %>
			<%= image_tag('https://dummyimage.com/300x450/000/fff', class: 'fallback-thumbnail') %>
		<% end %>
    <%= movie['title'] %><br>
  <% end %>
<% end %>
